{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "DOM",
      "ES2021"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules/*",
    "src/types/*"
  ]
}
